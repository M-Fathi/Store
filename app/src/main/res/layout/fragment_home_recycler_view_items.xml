<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="horizontal"
    android:id="@+id/LL_discount_item"
    >


    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="150dp"
        android:layout_height="300dp"
        android:elevation="4dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/img_Frag_Home_recyclerItems"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_alignParentTop="true"
                android:layout_margin="8dp"
                android:src="@drawable/kala1" />

            <TextView
                android:id="@+id/tv_itemName_Frag_Home_recyclerItems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_Frag_Home_recyclerItems"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:text="نام کالا"
                android:textColor="@color/color_OnSecondary"
                android:textSize="15sp"
                android:fontFamily="@font/b_mitra"/>


            <TextView
                android:id="@+id/tv_itemDiscount_Frag_Home_recyclerItems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/discount"
                android:paddingStart="4dp"
                android:paddingTop="2dp"
                android:paddingEnd="4dp"
                android:paddingBottom="1dp"
                android:text="20%"
                android:textColor="@color/color_OnError"
                android:textSize="10sp"
                android:textStyle="bold"
                android:fontFamily="@font/b_koodak_bold"/>

            <TextView
                android:id="@+id/tv_itemPrice_Frag_Home_recyclerItems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_toman"
                android:layout_marginStart="12dp"
                android:layout_toRightOf="@+id/tv_toman"
                android:text="55000"
                android:gravity="center"
                android:textColor="@color/color_OnSecondary"
                android:textSize="12sp"
                android:fontFamily="@font/b_koodak_bold"/>

            <TextView
                android:id="@+id/tv_toman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_itemDiscount_Frag_Home_recyclerItems"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="15dp"
                android:gravity="end"
                android:text="@string/toman"
                android:textColor="@color/color_OnSecondary"
                android:textSize="12sp"
                android:fontFamily="@font/b_koodak_bold"/>


        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>