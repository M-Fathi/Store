<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LL_category_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:layoutDirection="rtl"
    android:orientation="horizontal">

    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_margin="5dp"
        android:elevation="4dp"
        android:padding="10dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/rv_category_img"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/digikala_logo1" />

            <TextView
                android:id="@+id/tv_cat_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Item Brand"
                android:layout_below="@+id/rv_category_img"
                android:layout_centerInParent="true"
                android:textColor="@color/color_OnBackground"
                android:fontFamily="@font/b_mitra"
                />

            <TextView
                android:id="@+id/tv_cat_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="Item Name"
                android:layout_below="@+id/tv_cat_brand"
                android:layout_centerInParent="true"
                android:textColor="@color/color_OnBackground"
                android:fontFamily="@font/b_mitra"/>

            <TextView
                android:id="@+id/tv_cat_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:text="Item Price"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:textColor="@color/color_OnBackground"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/b_koodak_bold"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>


</LinearLayout>